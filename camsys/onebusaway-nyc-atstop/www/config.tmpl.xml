<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.khurshidfayzullaev.atstop" version="1.0.0">
    <name>At Stop</name>
    <description>
        A hybrid mobile app that provides information about when the next bus will arrive at your stop.
    </description>
    <author href="http://khfayzullaev.bitbucket.org/" email="khurshidfayzullaev@yahoo.com">
        Khurshid N. Fayzullaev
    </author>
    <!-- Platforms -->
    <gap:platform name="ios" />
    <gap:platform name="android" />
    <gap:platform name="winphone" />
    <!-- Permissions -->
    <preference name="permissions" value="none" />
    <!--  Preferences  -->
    <preference name="phonegap-version" value="3.6.3" />
    <preference name="orientation" value="portrait" />
    <!--  Preferences / iOS only -->
    <preference name="target-device" value="handset" />
    <preference name="detect-data-types" value="false" />
    <preference name="deployment-target" value="6.0" />
    <!--  Preferences / Android only -->
    <preference name="android-minSdkVersion" value="10" />
    <preference name="AndroidLaunchMode" value="singleTask" />
    <!-- Plugins -->
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.statusbar" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <!-- Define app icon for each platform. -->
    <icon src="res/android/ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
    <icon src="res/android/mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
    <icon src="res/android/hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
    <icon src="res/android/xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
    <icon src="res/ios/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="res/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="res/ios/icon@2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="res/ios/icon-72@2x.png" gap:platform="ios" width="144" height="144" />
    <!-- Define app splash screen for each platform. -->
    <gap:splash src="res/screen/android/splash-port-ldpi.png" />
    <gap:splash src="res/screen/android/splash-port-ldpi.png" gap:platform="android" gap:qualifier="port-ldpi" />
    <gap:splash src="res/screen/android/splash-port-mdpi.png" gap:platform="android" gap:qualifier="port-mdpi" />
    <gap:splash src="res/screen/android/splash-port-ddpi.png" gap:platform="android" gap:qualifier="port-hdpi" />
    <gap:splash src="res/screen/android/splash-port-xhdpi.png" gap:platform="android" gap:qualifier="port-xhdpi" />
    <gap:splash src="res/screen/android/splash-port-ldpi.png" gap:platform="android" gap:qualifier="land-ldpi" />
    <gap:splash src="res/screen/android/splash-port-mdpi.png" gap:platform="android" gap:qualifier="land-mdpi" />
    <gap:splash src="res/screen/android/splash-port-hdpi.png" gap:platform="android" gap:qualifier="land-hdpi" />
    <gap:splash src="res/screen/android/splash-port-xhdpi.png" gap:platform="android" gap:qualifier="land-xhdpi" />
    <gap:splash src="res/screen/ios/Default~iphone.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res/screen/ios/Default@2x~iphone.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="res/screen/ios/Default-568h@2x~iphone.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="res/screen/ios/Default-Portrait~ipad.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="res/screen/ios/Default-Landscape~ipad.png" gap:platform="ios" width="1024" height="768" />
</widget>
