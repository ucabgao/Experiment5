{{#if wrapperClass}}
    <div class={{wrapperClass}}>
      {{#unless template}}
        {{form-group label=label yieldInLabel=yieldInLabel
          labelWrapperClass=labelWrapperClass labelViewName=labelViewName labelClass=labelClass
          help=help helpViewName=helpViewName shouldShowErrors=shouldShowErrors
          controlView=controlView controlViewName=controlViewName controlWrapper=controlWrapper
          id=cid validationIcons=validationIcons mainComponent=this}}
      {{else}}
        {{yield}}
      {{/unless}}
    </div>
{{else}}
  {{#unless template}}
    {{form-group label=label yieldInLabel=yieldInLabel
      labelWrapperClass=labelWrapperClass labelViewName=labelViewName labelClass=labelClass
      help=help helpViewName=helpViewName shouldShowErrors=shouldShowErrors
      controlView=controlView controlViewName=controlViewName controlWrapper=controlWrapper
      id=cid validationIcons=validationIcons mainComponent=this}}
  {{else}}
    {{yield}}
  {{/unless}}
{{/if}}
